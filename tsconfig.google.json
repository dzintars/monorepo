{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext", "dom", "dom.iterable"],
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "outDir": "./",
    "baseUrl": "./packages",
    "paths": {
      "@material/mwc-*": ["./*/src"]
    },
    "composite": true,
    "importHelpers": true
  },
  "include": ["custom_typings/**/*.ts", "src/*.ts"],
  "exclude": []
}
